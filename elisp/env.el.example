;; Global environment variable - hash table for string key-value pairs
(defvar ym2ha0-env (make-hash-table :test 'equal)
  "Global environment variable as a hash table (Record<string, string>)")

;; Initialize with key-value pairs
(puthash "key1" "bar" ym2ha0-env)
(puthash "PATH_CLAUDE" "/home/whoami/.volta/bin/claude" ym2ha0-env)
(puthash "DEEP_SEEK_TOKEN" "sk-abcdef1234567890" ym2ha0-env)

